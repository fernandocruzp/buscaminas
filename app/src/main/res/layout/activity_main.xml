<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0748B8"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/kux"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:src="@drawable/corona" />

    <TextView
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="Busca al virus"
        android:textColor="@color/design_default_color_surface"
        android:textSize="34sp"
        tools:textAlignment="center" />

    <LinearLayout
        android:layout_width="313dp"
        android:layout_height="408dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="30dp"
        android:background="#5df505"
        android:orientation="vertical"
        tools:context=".MainActivity">


        <Button
            android:id="@+id/facil"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:backgroundTint="#0748b8"
            android:text="Fácil"
            android:textSize="20dp"
            tools:layout_marginBottom="40dp" />

        <Button
            android:id="@+id/medio"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:backgroundTint="#0748b8"
            android:text="Medio"
            android:textSize="20dp"
            tools:layout_marginBottom="40dp" />

        <Button
            android:id="@+id/dificil"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:backgroundTint="#0748b8"
            android:text="Difícil"
            android:textSize="20dp"
            tools:layout_marginBottom="40dp" />

        <Button
            android:id="@+id/extremo"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:backgroundTint="#0748b8"
            android:text="Extremo"
            android:textSize="20dp"
            tools:layout_marginBottom="40dp" />


    </LinearLayout>


</LinearLayout>